<p id="notice"><%= notice %></p>

<%= link_to 'Back', projects_path %>
<div class="header">
  <h1>Category</h1>
  <h6>(<%= @project.name %> | <%= project_deadline(@project.id) %>)</h6>
</div>

<div class="main">
 <% @categories.each do |category| %>
  <div class="card-category">
    <div class="left">
      <h1 class="title"><%= category.name %></h1>
    </div>
    <div class="right">
      <div class="deadline"><p><%= category_deadline(@project.id, category.id)%></p></div>
      <div class="progress">
        <div class="progress-header">
          <h1><%= cat_progress(category.progress) %></h1>
          <h6><%= total_task_complete(category.id)%> of <%= total_task(category.id)%> </h6>
        </div>
      </div>
      <div class="actions">
        <ul>
          <li><%= link_to 'View Task', project_category_tasks_path(@project, category) %></li>
          <li><%= link_to 'Edit', edit_project_category_path(@project, category) %></li>
          <li><%= link_to 'Destroy', project_category_path(@project, category), method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<%= link_to new_project_category_path(@project) do %>
  <div class="card-create">
    <div class="top-design"><h3>New</h3></div>
    <div class="card-main">
      <div id="circle">
        <div id="circle2">
        </div>
      </div>      
    </div>
    <div class="bot-design"><h3>Category</h3></div>
  </div>
<% end %>
</div>




