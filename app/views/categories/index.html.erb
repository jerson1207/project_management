<p id="notice"><%= notice %></p>
<%= link_to 'Back', projects_path %>

<h1>Project Name: <%= @project.name %></h1> 
<h2>Deadline: <%= project_deadline(@project.id) %></h2>

<table>
<caption><h1>Category</h1></caption>
  <thead>
    <tr>
      <th>Name</th>
      <th>Deadline</th>
      <th>complete</th>
      <th>progress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category_deadline(@project.id, category.id)%></td>
        <td><%= category.complete %></td>
        <td><%= cat_progress(category.progress) %> </td>
        <td><%= link_to 'Show', project_category_tasks_path(@project, category) %></td>
        <td><%= link_to 'Edit', edit_project_category_path(@project, category) %></td>
        <td><%= link_to 'Destroy', project_category_path(@project, category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to "New Category", new_project_category_path(@project) %>
